# Coverage.py configuration for RightOnTime Project

[run]
source = "."
omit =
    */migrations/*
    */tests.py
    */test_*.py
    */__pycache__/*
    */venv/*
    */env/*
    manage.py
    */wsgi.py
    */asgi.py
    */settings.py
    */apps.py
    */__init__.py

[report]
# Reporting options
precision = 2
show_missing = True
skip_covered = False

# Fail if coverage is below threshold
fail_under = 60

exclude_lines =
    pragma: no cover
    def __repr__
    def __str__
    raise AssertionError
    raise NotImplementedError
    if __name__ == '__main__':
    if settings.DEBUG
    if TYPE_CHECKING:
    @abstractmethod
    @abc.abstractmethod

[html]
directory = htmlcov

[xml]
output = coverage.xml
